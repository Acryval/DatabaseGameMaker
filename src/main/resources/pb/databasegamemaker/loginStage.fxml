<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="pb.databasegamemaker.LoginStage">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER">
        <Label text="Database URL: "/>
        <TextField fx:id="db"/>
    </HBox>
    <HBox alignment="CENTER">
        <Label text="Username: "/>
        <TextField fx:id="un"/>
    </HBox>
    <HBox alignment="CENTER">
        <Label text="Password: "/>
        <PasswordField fx:id="pw"/>
    </HBox>
    <HBox alignment="CENTER">
        <Button text="Login" onAction="#login"/>
        <Button text="Exit" onAction="#exit"/>
    </HBox>
    <Label fx:id="result"/>
</VBox>
